<view class="serach"><view class="content"><view class="{{(('content-box')+' '+((mode===2)?'center':''))}}"><text class="icon icon-serach"></text><input class="{{(('input')+' '+((!active&&mode===2)?'center':''))}}" placeholder="{{placeholder}}" confirm-type="search" focus="{{isFocus}}" data-event-opts="{{[['input',[['__set_model',['','inputVal','$event',[]]],['inputChange',['$event']]]],['confirm',[['triggerConfirm',['$event']]]],['focus',[['focus',['$event']]]],['blur',[['blur',['$event']]]]]}}" value="{{inputVal}}" onInput="__e" onConfirm="__e" onFocus="__e" onBlur="__e"/><block a:if="{{isDelShow}}"><text data-event-opts="{{[['tap',[['clear',['$event']]]]]}}" class="icon icon-del" catchTap="__e"></text></block></view><view data-event-opts="{{[['tap',[['search',['$event']]]]]}}" hidden="{{!(active&&show&&button==='inside'||isDelShow&&button==='inside')}}" class="serachBtn" onTap="__e">搜索</view></view><block a:if="{{button==='outside'}}"><view data-event-opts="{{[['tap',[['search',['$event']]]]]}}" class="{{(('button')+' '+((show||active)?'active':''))}}" onTap="__e"><view class="button-item">{{!show?searchName:'搜索'}}</view></view></block></view>