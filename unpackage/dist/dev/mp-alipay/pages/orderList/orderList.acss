
.order-title {
		padding-left: 30rpx;
		border-left: 6px solid #fed22b;
		margin-top: 30px;
		color: #444444;
}
.empty {
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-orient: vertical;
		-webkit-box-direction: normal;
		-webkit-flex-direction: column;
		        flex-direction: column;
		-webkit-box-pack: center;
		-webkit-justify-content: center;
		        justify-content: center;
		-webkit-box-align: center;
		-webkit-align-items: center;
		        align-items: center;
		margin: 60rpx 30rpx;
}
.empty-img {
		width: 160rpx;
		height: 160rpx;
}
.order-list-text {
		font-size: 28rpx;
		margin: 30rpx;
}
.order-box-main {
		border-top: 6px solid #f3f3f3;
		margin-top: 40rpx;
		padding: 30rpx 30rpx 0 30rpx;
}
.order-box-top {
		border-bottom: 1px solid #f3f3f3;
		padding-bottom: 30rpx;
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		-webkit-box-pack: justify;
		-webkit-justify-content: space-between;
		        justify-content: space-between;
}
.order-box-content{
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		padding: 20rpx 0;
}
.order-img{
		width: 160rpx;
		height:160rpx;
}
.order-info{
		margin:0 20rpx;
		width: 360rpx;
}
.goodname{
		margin: 10rpx 0;
}
.good-info{
		color: #999;
		font-size: 30rpx;
}
.order-good-price{
		font-size: 28rpx;color: #999;
		margin: 10rpx 0;
}
.price{
		color: red;
		font-weight: bold;
		font-size: 40rpx;
		margin-top: 6rpx;
}
.order-btn{
		display: -webkit-box;
		display: -webkit-flex;
		display: flex;
		border-top: 1px solid #f3f3f3;
		-webkit-box-pack:end;
		-webkit-justify-content:flex-end ;
		        justify-content:flex-end ;
		padding: 20rpx 0 0;
}
.order-del{
		border-radius: 50px;
		padding: 0 40rpx;
		height: 70rpx;
		line-height: 70rpx;
		font-size: 16px;
		border: 1px solid #fed22b;
		background: #fff;
		color: #935009;
		margin-right:20rpx;
}
.order-open{
		border-radius: 50px;
		padding: 0 40rpx;
		height: 70rpx;
		line-height: 70rpx;
		font-size: 16px;
		background: #fed22b;
		color: #935009;
}

