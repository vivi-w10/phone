<view><view class="user-bg"><view class="user" style="text-align:center;color:#fff;"><view class="user-face"><image src="{{user.avatar}}" mode="aspectFill"></image></view><block a:if="{{!showName}}"><button class="user-name" open-type="getAuthorize" scope="phoneNumber" data-event-opts="{{[['getAuthorize',[['getAlPhoneNumber',['$event']]]],['error',[['onAuthError',['$event']]]]]}}" onGetAuthorize="__e" onError="__e">点击获取手机号</button></block><block a:if="{{showName}}"><text>{{phoneNumber}}</text></block></view></view><view class="info">绑定手机号：</view><view class="info">{{phoneNumber}}</view></view>